<div class="booking-container">
  <p class="sub-title">
    <%= pluralize(@flights.count, "Flight") %> on <%= @flights.first.humanize_date %>:
  </p>
  <% @flights.each do |flight| %>
    <%= render partial: 'summary', locals: { flight: flight } %>
  <% end %>
  <br />
  <p class="sub-title">Add Passenger Information:</p>
  <%= render partial: 'form' %>
</div>
